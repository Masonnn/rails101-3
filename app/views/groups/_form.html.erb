<%= form_for @group do |f| %>

标题
<br>
<%= f.text_field :title %>

<% if @group.errors.any? %>
  <ul>
    <% @group.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<br>
描述
<br>
<%= f.text_area :description%>
<br>

<%= f.submit "Submit", :disable_with => "Submiting..."%>
<% end %>
